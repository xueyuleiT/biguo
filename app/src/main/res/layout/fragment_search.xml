<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--<include layout="@layout/title_layout" />-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/searchList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chooseView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <ListView
                        android:id="@+id/adacemy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:dividerHeight="@dimen/public_space_value_0.1"
                        android:scrollbars="none"
                        android:visibility="invisible" />

                    <ListView
                        android:id="@+id/perfession"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/ttf_title_bg"
                        android:dividerHeight="@dimen/public_space_value_0.1"
                        android:scrollbars="none"
                        android:visibility="invisible" />

                    <ListView
                        android:id="@+id/calss"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/ttf_title_bg"
                        android:dividerHeight="@dimen/public_space_value_0.1"
                        android:scrollbars="none"
                        android:visibility="invisible" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/top_title_blue_theme"
                    android:gravity="center_vertical"
                    android:padding="@dimen/public_space_value_5">

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="@dimen/public_space_value_50"
                        android:layout_height="@dimen/public_space_value_30"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/normal_btn"
                        android:text="取消" />

                    <Button
                        android:id="@+id/ok"
                        android:layout_width="@dimen/public_space_value_50"
                        android:layout_height="@dimen/public_space_value_30"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/normal_btn"
                        android:text="确定" />

                </RelativeLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>